<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ui.ForecastDetailsFragment" android:id="@+id/layout">

    <data>
        <variable name="city" type="com.example.zach.weatherapp.data.ForecastViewItem"/>
    </data>

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent"
                android:background="@color/colorAccent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/forecastDetailsFragment">


            <TextView
                    android:text="@{city.description}"
                    tools:text="Sunny"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/weather_description_textview"
                    android:fontFamily="@font/roboto_light" android:textSize="20sp" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/temperature_textview"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"/>
            <TextView
                    tools:text="13°"
                    android:text="@{city.temp + `°`}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/temperature_textview"
                    android:fontFamily="@font/roboto_light" android:textSize="85sp"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.509"
                    android:textColor="@android:color/black" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/city_name_textview"/>
            <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/imageView"
                    app:layout_constraintStart_toEndOf="@+id/weather_description_textview"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@+id/weather_description_textview"
                    app:layout_constraintBottom_toBottomOf="@+id/weather_description_textview"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{city.temp_min + `° / ` + city.temp_max + `°`}"
                    android:id="@+id/min_temperature_textview"
                    android:fontFamily="@font/roboto_light"
                    tools:text="9°/15°"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/weather_description_textview"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:id="@+id/forecast_recyclerView" android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/humidityLayout" android:layout_marginTop="24dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{city.name}"
                    android:id="@+id/city_name_textview" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:textColor="@android:color/black" android:textSize="24sp" tools:text="Caen"
                    android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/humidityLayout"
                    app:layout_constraintTop_toTopOf="@+id/pressureLayout"
                    app:layout_constraintBottom_toBottomOf="@+id/pressureLayout"
                    app:layout_constraintStart_toEndOf="@+id/windLayout" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/pressureLayout">
                <ProgressBar
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:progress="@{city.humidity}"
                        android:progressDrawable="@drawable/circle"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:id="@+id/humidityProgress"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                        android:text="@string/humidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3"
                        app:layout_constraintTop_toBottomOf="@+id/humidityProgress"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHorizontal_bias="0.0" android:textColor="@android:color/black"
                        android:fontFamily="@font/roboto_light"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/humidity_value_textview"
                        android:text="@{city.humidity + `%`}"
                        tools:text="34%"
                        android:fontFamily="@font/roboto_light" android:textColor="@android:color/black"
                        app:layout_constraintEnd_toEndOf="@+id/humidityProgress"
                        app:layout_constraintStart_toStartOf="@+id/humidityProgress" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="@+id/humidityProgress" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toTopOf="@+id/textView3"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/windLayout" app:layout_constraintTop_toTopOf="@+id/humidityLayout"
                    app:layout_constraintBottom_toBottomOf="@+id/humidityLayout"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/humidityLayout">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/wind_value_textview"
                        tools:text="20 km/h"
                        android:text="@{city.wind_speed + ` km/h`}"
                        android:fontFamily="@font/roboto_light" android:textColor="@android:color/black"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView4"/>
                <ImageView
                        android:src="@drawable/ic_wind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView4"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pressureLayout"
                    app:layout_constraintStart_toEndOf="@+id/humidityLayout" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/min_temperature_textview">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pressure_value_textview"
                        tools:text="1020 hPa"
                        android:text="@{city.pressure + ` hPa`}"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/roboto_light"
                        app:layout_constraintTop_toBottomOf="@+id/imageView5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                <ImageView
                        android:src="@drawable/ic_pressure_gauge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</layout>
